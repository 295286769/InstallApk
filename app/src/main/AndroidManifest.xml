<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huangshang.testapplication">

    <application
        android:name="com.sharkgulf.checkandinstallapk.aplication.UpdateAplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.huangshang.bluetoothlib.activity.BleScanActivity"/>
        <receiver android:name="com.huangshang.bluetoothlib.reciver.BluetoothReciver"/>
        <service
            android:name=".viewmodel.MyAccessibilityService"
            android:label="@string/checkapk_maniset_install"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:process=":BackgroundService">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/checkapk_accessibility_service_config" />
        </service>
        <service android:name="com.sharkgulf.checkandinstallapk.server.UpdateApkService"/>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/checkapk_gdt_file_path" />
        </provider>
    </application>

</manifest>